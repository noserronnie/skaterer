@model Skateshop.Models.User

@{
    ViewData["Title"] = "Logout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center-site width-40">
    <i class="site-icon-danger fas fa-sign-out-alt"></i>
    <br><br><br>

    <h1>Are you sure you want to logout?</h1>
    <br>

    <form asp-action="ConfirmLogout">
        <div class="form-group">
            <input type="submit" value="Logout" class="button button-danger width-100" />
        </div>
    </form>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
