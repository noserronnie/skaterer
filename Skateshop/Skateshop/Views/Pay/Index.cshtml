@using Skaterer.Models
@using Skaterer.Services.Products

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/checkoutstyle.css" rel="stylesheet" type="text/css" />

<div class="row rowerer">
    <div class="col-75 col-75er">
        <div class="container containerer bg-dark text-light">

            <div class="row rowerer">
                <div class="col-50 col-50er">
                    <h3>Billing Address</h3>
                    <label for="fname"><i class="fa fa-user"></i> Full Name</label>
                    <input type="text" id="fname" name="firstname" placeholder="Alessio Hartmann">
                    <label for="email"><i class="fa fa-envelope"></i> Email</label>
                    <input type="text" id="email" name="email" placeholder="alessio@hartmann.com">
                    <label for="adr"><i class="fa fa-address-card-o"></i> Address</label>
                    <input type="text" id="adr" name="address" placeholder="Baumsteinstrasse 89A">
                    <label for="city"><i class="fa fa-institution"></i> City</label>
                    <input type="text" id="city" name="city" placeholder="Zuerich">

                    <div class="row rowerer">
                        <div class="col-50 col-50er">
                            <label for="state">State</label>
                            <input type="text" id="state" name="state" placeholder="ZH">
                        </div>
                        <div class="col-50 col-50er">
                            <label for="zip">Zip</label>
                            <input type="text" id="zip" name="zip" placeholder="8234">
                        </div>
                    </div>
                </div>

                <div class="col-50 col-50er">
                    <h3>Payment</h3>
                    <label for="fname">Accepted Cards</label>
                    <div class="icon-container text-dark">
                        <i class="fa fa-cc-visa" style="color:navy;"></i>
                        <i class="fa fa-cc-amex" style="color:blue;"></i>
                        <i class="fa fa-cc-mastercard" style="color:red;"></i>
                        <i class="fa fa-cc-discover" style="color:orange;"></i>
                    </div>
                    <label for="cname">Name on Card</label>
                    <input type="text" id="cname" name="cardname" placeholder="Alessio Hartmann">
                    <label for="ccnum">Credit card number</label>
                    <input type="text" id="ccnum" name="cardnumber" placeholder="1111-2222-3333-4444">
                    <label for="expmonth">Exp Month</label>
                    <input type="text" id="expmonth" name="expmonth" placeholder="September">

                    <div class="row rowerer">
                        <div class="col-50 col-50er">
                            <label for="expyear">Exp Year</label>
                            <input type="text" id="expyear" name="expyear" placeholder="2022">
                        </div>
                        <div class="col-50 col-50er">
                            <label for="cvv">CVV</label>
                            <input type="text" id="cvv" name="cvv" placeholder="352">
                        </div>
                    </div>
                </div>

            </div>
            <label>
                <input type="checkbox" checked="checked" name="sameadr"> Shipping address same as billing
            </label>
            <div>
                <a class="button button-primary width-100 download-button" style="" asp-controller="Pay" asp-action="Download">Checkout</a>
                <a class="button button-danger width-100" style="" asp-controller="ShoppingCart" asp-action="Index">Cancel</a>
            </div>
        </div>
    </div>
</div>