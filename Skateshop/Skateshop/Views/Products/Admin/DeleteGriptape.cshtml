@model Skaterer.Services.Products.Models.DeleteProductViewModel

@{
    ViewData["Title"] = "Delete Griptape";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center-site width-40">
    <i class="site-icon-danger fas fa-sign-out-alt"></i>
    <br><br><br>

    <h1>Are you sure you want to delete the griptape?</h1>
    <br>

    <form asp-controller="Products" asp-action="DeleteGriptapeConfirm" asp-route-id="@Model.Id">
        <div class="form-group">
            <input type="submit" value="Delete Griptape" class="button button-danger width-100" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
